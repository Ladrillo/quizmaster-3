<% if !params[:quiz] %>
  <h3>Select quiz:</h3>

  <form action="/" method='post'>
    <input type='text' name='quiz' autofocus/>
    <input type='submit' class='btn'/>
  </form>

<% else %>

  <h3> You have selected '<%= params[:quiz] %>'</h3>

  <div>
  	<a href="/quizmaster?quiz=<%= params[:quiz] %>&q=0">YES! Take me to the quiz!</a>
  </div>
  
  <div>
  	<a href="/">NO! I want to select a different quiz.</a>
  </div>

<% end %>